void input_data()
{
	char a[20];
	int age;
	int sal;
	printf(" Enter name of the Person: ");
	scanf("%s",&a);
	printf(" Enter age of the person: ");
	scanf("%d",&age);
	printf("Enter salary: ");
	scanf("%d",&sal);
}
void display_data()
{
printf("\n Name of the person=%s",a);
printf("\n Age of the person=%d",age);
printf("\n Salary of the person=%d,sal);
}
void main()
{
clrscr();
